<project>
  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.8</version>
  </skin>
  <custom>
    <fluidoSkin>
      <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
      <gitHub>
        <projectId>mal-lang/page-test</projectId>
        <ribbonOrientation>right</ribbonOrientation>
      </gitHub>
    </fluidoSkin>
  </custom>
  <bannerLeft>
    <name>MAL</name>
    <src>${project.organization.url}/helmet.svg</src>
    <href>${project.organization.url}</href>
  </bannerLeft>
  <publishDate position="right" />
  <version position="right" />
  <body>
    <menu ref="reports" />
    <breadcrumbs>
      <item name="MAL" href="${project.organization.url}" />
      <item name="Page Test" href="${project.url}" />
    </breadcrumbs>
    <footer>
      <![CDATA[
      <div style="display: flex; flex-direction: column; align-items: center; text-align: center;">
        <p>
          Copyright &copy; 2020 <a href="${project.organization.url}">${project.organization.name}</a>. All rights reserved.
        </p>
        <img alt="MAL logo" style="width: 3em; height: 3em;" src="https://mal-lang.org/helmet.svg" />
        <p>
          This work, "MAL logo", is a derivative of "<a href="https://thenounproject.com/term/diving-helmet/2448842/">Diving Helmet</a>" by <a href="https://thenounproject.com/madexmadeicons/">Made x Made Icons</a>, used under <a href="https://creativecommons.org/licenses/by/3.0/">CC BY 3.0</a>.
          <br />
          "MAL logo" is licensed under <a href="https://creativecommons.org/licenses/by/4.0/">CC BY 4.0</a> by <a href="https://www.foreseeti.com/">Foreseeti AB</a>.
        </p>
      </div>
      ]]>
    </footer>
  </body>
</project>
